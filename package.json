{
    "name": "rustfs-gui-v3",
    "version": "1.0.0",
    "description": "RustFS Management GUI",
    "main": "electron/main.js",
    "scripts": {
        "dev": "concurrently \"npm run dev:vite\" \"npm run dev:electron\"",
        "dev:vite": "vite",
        "build:vite": "vite build",
        "build:verify": "vite build && node scripts/verify-i18n.js",
        "dev:electron": "cross-env ELECTRON_CACHE=.electron-cache ELECTRON_BUILDER_CACHE=.electron-cache && cross-env NODE_ENV=development electron .",
        "dev:electron-only": "cross-env NODE_ENV=development electron .",
        "build": "vite build &&  cross-env ELECTRON_CACHE=.electron-cache ELECTRON_BUILDER_CACHE=.electron-cache  electron-builder",
        "build:win": "vite build && electron-builder --win",
        "build:msi": "vite build && cross-env ELECTRON_CACHE=.electron-cache ELECTRON_BUILDER_CACHE=.electron-cache electron-builder --win --x64 --ia32",
        "preview": "vite preview",
        "build:win2": "set ELECTRON_CACHE=.electron-cache && set ELECTRON_BUILDER_CACHE=.electron-cache && electron-builder --win",
        "build:win-local": "vite build && cross-env ELECTRON_CACHE=.electron-cache ELECTRON_BUILDER_CACHE=.electron-cache electron-builder --win",
        "build:wix-msi": "node build-msi.js",
        "build:msi-full": "npm run build && node build-msi.js"
    },
    "build": {
        "appId": "ai.rustfs.com",
        "productName": "RustFS Manager",
        "directories": {
            "output": "release"
        },
        "files": [
            "dist/**/*",
            "electron/**/*",
            "node_modules/**/*",
            "rustfs.exe"
        ],
        "extraResources": [
            {
                "from": "rustfs.exe",
                "to": "rustfs.exe"
            }
        ]
    },
    "win": {
        "electronDownload": {
            "mirror": "https://npmmirror.com/mirrors/electron/"
        },
        "target": [
            {
                "target": "nsis",
                "arch": [
                    "x64",
                    "ia32"
                ]
            },
            {
                "target": "msi",
                "arch": [
                    "x64",
                    "ia32"
                ]
            }
        ],
        "icon": "build/icon.ico",
        "requestedExecutionLevel": "asInvoker"
    },
    "nsis": {
        "oneClick": false,
        "allowToChangeInstallationDirectory": true,
        "createDesktopShortcut": true,
        "createStartMenuShortcut": true
    },
    "msi": {
        "createDesktopShortcut": true,
        "createStartMenuShortcut": true,
        "oneClick": false,
        "perMachine": false,
        "allowToChangeInstallationDirectory": true,
        "warningsAsErrors": false
    },
    "devDependencies": {
        "@vitejs/plugin-vue": "^4.6.2",
        "concurrently": "^7.6.0",
        "cross-env": "^7.0.3",
        "electron": "^22.3.27",
        "electron-builder": "^24.13.3",
        "electron-wix-msi": "^5.1.3",
        "vite": "^4.5.14",
        "wait-on": "^7.2.0"
    },
    "dependencies": {
        "@element-plus/icons-vue": "^2.3.1",
        "child_process": "^1.0.2",
        "element-plus": "^2.10.4",
        "vue": "^3.5.18",
        "vue-i18n": "^9.14.5"
    }
}